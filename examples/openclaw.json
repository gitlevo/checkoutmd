{
  // checkout-wallet MCP config for OpenClaw CLI backends
  //
  // 1. Save this as ~/.checkout/mcp.json (or wherever you prefer)
  // 2. Point your CLI backend at it in ~/.openclaw/openclaw.json:
  //
  //    {
  //      "agents": {
  //        "defaults": {
  //          "cliBackends": {
  //            "claude-cli": {
  //              "args": ["--mcp-config", "~/.checkout/mcp.json"]
  //            }
  //          }
  //        }
  //      }
  //    }
  //
  // 3. The checkout-wallet skill (skill/SKILL.md) teaches the agent the protocol.

  "mcpServers": {
    "checkout-wallet": {
      "command": "checkout-wallet",
      "args": ["serve", "--vault", "~/.checkout/vault.db"],
      "env": {
        "CHECKOUT_PASSPHRASE": "${CHECKOUT_PASSPHRASE}"
      }
    }
  }
}
